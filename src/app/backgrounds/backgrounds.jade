img(ng-src='./assets/images/zootrope_background.svg')
h3 Updater un background
div(ng-repeat='(key,background) in backgrounds').row
  div.backgroundContainer
    div(style="background-position: {{background}}px 0px").backgroundSprite
  //img(ng-src="{{background}}").small-6
  div.small-2 {{key}}
    input(type='number', ng-model='backgrounds[key]')
  span.small-1
    button(ng-click='delete(background)').button.alert
      i.fa.fa-trash

  //div.small-3
  //  div(ngf-select="uploadBackground(key, $file)").button Selectionner un fichier
  div.small-12
    button(ng-click='saveBackground(key)').button.warning Sauvegarder le background
