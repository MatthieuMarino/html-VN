  div.stories
    div(ng-repeat=" perso in storyData.questions[index].characters ")
      character(data='perso', mood='{{moods[perso.name]}}', style='left: -400px; top:{{perso.columnY}}px',
      ng-class='{slide1:perso.columnX==0, slide2:perso.columnX==87.5, slide3:perso.columnX==175, slide4:perso.columnX==262.5,' +
