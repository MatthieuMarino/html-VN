h3 Liste des histoires

div(ng-repeat='story in stories')
  div {{story.title}}
    a(ng-href='#/story/{{story.$id}}').button.success Lancer
    a(ng-if='unlock', ng-href='#/edit/{{story.$id}}').button.secondary Modifier
    button(ng-if='unlock', ng-click='deleteStory(story)').button.alert
      i.fa.fa-trash
